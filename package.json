{
  "name": "@newhighsco/renovate-config",
  "description": "New High Score shareable config for Renovate",
  "version": "1.4.0",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/renovate-config.git"
  },
  "homepage": "https://github.com/newhighsco/renovate-config#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/renovate-config/issues"
  },
  "scripts": {
    "test": "npm run lint",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ext .js,.jsx,.json .",
    "format": "npm-run-all --parallel format:*",
    "format:js": "npm run lint:js -- --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "9.0.1",
    "@newhighsco/commitlint-config": "1.0.2",
    "@newhighsco/editor-config": "1.1.1",
    "@newhighsco/eslint-config": "2.2.10",
    "@newhighsco/prettier-config": "2.0.3",
    "@newhighsco/release-config": "1.0.26",
    "eslint": "7.3.1",
    "husky": "4.2.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "semantic-release": "17.1.1"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config"
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ]
  },
  "renovate-config": {
    "default": {
      "extends": [
        "default:base"
      ],
      "packageRules": [
        {
          "updateTypes": [
            "minor",
            "patch",
            "pin",
            "digest",
            "lockFileMaintenance",
            "bump"
          ],
          "automerge": true
        },
        {
          "description": "Group New High Score packages together",
          "groupName": "newhighsco packages",
          "groupSlug": "newhighsco",
          "packagePatterns": [
            "^@newhighsco"
          ]
        },
        {
          "description": "Group Next.js packages and plugins together",
          "extends": [
            "monorepo:nextjs"
          ],
          "groupName": "nextjs packages",
          "groupSlug": "nextjs",
          "packagePatterns": [
            "^next"
          ]
        }
      ]
    }
  }
}
