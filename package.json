{
  "name": "@newhighsco/renovate-config",
  "description": "New High Score shareable config for Renovate",
  "version": "1.0.0",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/renovate-config.git"
  },
  "homepage": "https://github.com/newhighsco/renovate-config#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/renovate-config/issues"
  },
  "engines": {
    "node": "^13.7.0",
    "yarn": "^1.19.1"
  },
  "scripts": {
    "test": "npm run lint",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ext .js,.jsx,.json .",
    "format": "npm-run-all --parallel format:*",
    "format:js": "npm run lint:js -- --fix"
  },
  "devDependencies": {
    "@newhighsco/eslint-config": "1.1.1",
    "@newhighsco/prettier-config": "1.0.2",
    "@newhighsco/release-config": "1.0.13",
    "eslint": "6.8.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1"
  },
  "prettier": "@newhighsco/prettier-config",
  "eslintConfig": {
    "extends": [
      "@newhighsco"
    ]
  },
  "release": {
    "extends": "@newhighsco/release-config"
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ]
  },
  "renovate-config": {
    "default": {
      "extends": [
        "default:base"
      ],
      "packageRules": [
        {
          "updateTypes": [
            "minor",
            "patch",
            "pin",
            "digest",
            "lockFileMaintenance",
            "bump"
          ],
          "automerge": true,
          "automergeType": "branch"
        }
      ]
    }
  }
}
